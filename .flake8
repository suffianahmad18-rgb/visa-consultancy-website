# .flake8
[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    venv,
    env,
    migrations,
    static,
    media,
    *.pyc
ignore = 
    E203,    
    # whitespace before ':'
    W503,    
    # line break before binary operator
    E501,    
    # line too long (handled by black)
    E266,    
    # too many leading '#' for block comment
    F401,    
    # module imported but unused
    E402,    
    # module level import not at top of file
    E722,    
    # do not use bare 'except'
per-file-ignores =
    */migrations/*.py: E266, E402, F401
    __init__.py: F401